{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,    
    "strict": true,                        
    "alwaysStrict": true,
    "noImplicitAny": false,
    "outDir": "dist",                       
    "rootDir": "src"                
  },
  "include": ["src"],
  "exclude": ["node_modules","dist","resources"]
}
